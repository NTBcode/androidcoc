<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COC Auto Bot"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khởi động Service"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dừng Service"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnOpenAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mở Accessibility Settings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu ý:\n1. Bật Accessibility Service\n2. Cấp quyền Overlay\n3. Click 'Khởi động Service'"
        android:layout_marginTop="32dp"
        android:textSize="14sp"
        android:gravity="center" />

</LinearLayout>